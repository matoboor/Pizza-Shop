@model PizzaShop.Models.Catalog.ProductOptionValue

@{
    ViewBag.Title = "AddProductOptionValue";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AddProductOptionValue</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ProductOptionValue</legend>
        @Html.HiddenFor(model => model.ProductOptionId)
        @Html.HiddenFor(model => model.ProductOptionValueId)
    <table>
        <tr>
            <th>
            Value
            </th>
            <th>
            Name
            </th>
            
            <th>
            Price
            </th>
            <th>
            Default
            </th>
        </tr>
        <tr>
            <td>
                @Html.DropDownListFor(model => model.OptionValueId, ViewBag.OptionValues as SelectList)
            </td>
            <td>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
            <td>
                @Html.EditorFor(model => model.Price)
            </td>
            <td>
                @Html.EditorFor(model => model.Default)
            </td>
        </tr>
     </table>


        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
