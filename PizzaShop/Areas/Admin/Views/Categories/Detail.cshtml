@model PizzaShop.Models.Catalog.Category

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detail</h2>

<fieldset>
    <legend>Category</legend>

    <div class="display-label">ID</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CategoryId)
    </div>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Image</div>
    <div class="display-field">
        <img src="@Url.Content(Model.Image.Url)" title="@Model.Name" width="50" height="50" />
    </div>

    
</fieldset>
<p>
    @if(User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Edit", "Edit", new { id=Model.CategoryId }) <text> | </text>
    }
    @Html.ActionLink("Back to List", "Index")
</p>
